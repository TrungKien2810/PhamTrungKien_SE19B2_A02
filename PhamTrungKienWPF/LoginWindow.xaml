<Window x:Class="PhamTrungKienWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - FUMiniHotelSystem" 
        Height="600" 
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource SurfaceAltBrush}">
    
    <Window.Resources>
        <SolidColorBrush x:Key="HeaderBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="SurfaceAltBrush" Color="#E8F5E9"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="FooterBrush" Color="#E8F5E9"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#2E7D32"/>
        <SolidColorBrush x:Key="OnPrimaryBrush" Color="#FFFFFF"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="565"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="FUMiniHotelSystem" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Hotel Management System" 
                          FontSize="14" 
                          Foreground="White" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Margin="20" CornerRadius="10" Padding="30">
            <StackPanel>
                <TextBlock Text="Login" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Margin="0,0,0,20"/>

                <!-- Login Type -->
                <TextBlock Text="Login As:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <RadioButton x:Name="rbAdmin" Content="Administrator" IsChecked="True" Margin="0,0,20,0"/>
                    <RadioButton x:Name="rbCustomer" Content="Customer" Margin="0,0,20,0"/>
                </StackPanel>

                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                        Height="35" 
                        Margin="0,0,0,15"
                        Padding="10"/>

                <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                            Height="35" 
                            Margin="0,0,0,20"
                            Padding="10"/>

                <Button x:Name="LoginButton" 
                       Content="Login" 
                       Height="40" 
                       Style="{DynamicResource PrimaryButton}" 
                       FontWeight="Bold" 
                       Click="LoginButton_Click"
                       Margin="0,0,0,10"/>

                <TextBlock x:Name="ErrorMessageText" 
                          Foreground="Red" 
                          HorizontalAlignment="Center" 
                          Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource FooterBrush}" Padding="10">
            <TextBlock Text="Â© 2024 FUMiniHotelSystem - Version 1.0" 
                      FontSize="10" 
                      HorizontalAlignment="Center" 
                      Foreground="{DynamicResource TextSecondaryBrush}"/>
        </Border>
    </Grid>
</Window>
