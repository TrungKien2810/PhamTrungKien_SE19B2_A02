<Window x:Class="PhamTrungKienWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUMiniHotelSystem - Admin Panel" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="{DynamicResource SurfaceAltBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="FUMiniHotelSystem - Admin Panel" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="{DynamicResource OnPrimaryBrush}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ToggleButton x:Name="ThemeToggle" Content="Dark Mode" Margin="0,0,10,0" Checked="ThemeToggle_Checked" Unchecked="ThemeToggle_Unchecked"/>
                    <Button Content="Logout" 
                            Style="{DynamicResource DangerButton}" 
                            Padding="15,5" 
                            Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu -->
            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="5" Padding="10" Margin="0,0,10,0">
                <StackPanel>
                    <Button x:Name="CustomerButton" 
                           Content="Manage Customers" 
                           Height="40" 
                           Margin="0,5" 
                           Click="CustomerButton_Click"/>
                    
                    <Button x:Name="RoomButton" 
                           Content="Manage Rooms" 
                           Height="40" 
                           Margin="0,5" 
                           Click="RoomButton_Click"/>
                    
                    <Button x:Name="BookingButton" 
                           Content="Manage Bookings" 
                           Height="40" 
                           Margin="0,5" 
                           Click="BookingButton_Click"/>
                    
                    <Button x:Name="ReportButton" 
                           Content="Report" 
                           Height="40" 
                           Margin="0,5" 
                           Click="Report_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" CornerRadius="5" Padding="20">
                <Grid x:Name="ContentGrid">
                    <TextBlock Text="Welcome to FUMiniHotelSystem Admin Panel" 
                              FontSize="18" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center" 
                              Foreground="{DynamicResource TextSecondaryBrush}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{DynamicResource FooterBrush}" Padding="10">
            <TextBlock Text="© 2024 FUMiniHotelSystem - Admin Panel" 
                      FontSize="10" 
                      HorizontalAlignment="Center" 
                       Foreground="{DynamicResource TextSecondaryBrush}"/>
        </Border>
    </Grid>
</Window>
