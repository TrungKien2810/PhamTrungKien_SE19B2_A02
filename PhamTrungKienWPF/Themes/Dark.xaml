<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark theme palette -->
    <Color x:Key="Color.Primary">#90CAF9</Color>
    <Color x:Key="Color.PrimaryDark">#64B5F6</Color>
    <Color x:Key="Color.Accent">#81C784</Color>
    <Color x:Key="Color.Danger">#EF9A9A</Color>
    <Color x:Key="Color.Warning">#FFB74D</Color>
    <Color x:Key="Color.Info">#BA68C8</Color>
    <Color x:Key="Color.Surface">#FF1E1E1E</Color>
    <Color x:Key="Color.SurfaceAlt">#FF121212</Color>
    <Color x:Key="Color.Footer">#FF1F1F1F</Color>
    <Color x:Key="Color.Header">#FF263238</Color>
    <Color x:Key="Color.TextPrimary">#FFFFFFFF</Color>
    <Color x:Key="Color.TextSecondary">#FFB0B0B0</Color>
    <Color x:Key="Color.OnPrimary">#FF000000</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource Color.PrimaryDark}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Color.Accent}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Color.Danger}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Color.Warning}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Color.Info}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="{StaticResource Color.SurfaceAlt}"/>
    <SolidColorBrush x:Key="FooterBrush" Color="{StaticResource Color.Footer}"/>
    <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource Color.Header}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource Color.TextSecondary}"/>
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource Color.OnPrimary}"/>

    <!-- Common styles -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="15,5"/>
    </Style>

    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
    </Style>

    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{DynamicResource DangerBrush}"/>
    </Style>

    <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{DynamicResource WarningBrush}"/>
    </Style>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource SurfaceAltBrush}"/>
    </Style>
</ResourceDictionary>
